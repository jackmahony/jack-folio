#mobile-menu.animated.overlay.fadeInDown.fadeOutUp.hide-for-medium
  %a.close-menu
    <svg width="25px" height="25px" viewBox="0 0 25 25" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <!-- Generator: Sketch 44 (41411) - http://www.bohemiancoding.com/sketch -->
        <desc>Created with Sketch.</desc>
        <defs></defs>
        <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="exit-button" transform="translate(1.000000, 1.000000)" stroke="#50E3C2" stroke-width="3">
                <path d="M0.0512858073,0.0333170573 L22.9741699,22.9567627" id="Path-2"></path>
                <path d="M22.985026,0.0540934245 L0.0780517578,22.9932617" id="Path-3"></path>
            </g>
        </g>
    </svg>

  #mobile-container
    %ul#mobile-main.menu.mobile.vertical{data-accordion-menu: true}
      {% for item in topnav.get_items %}
        %li{class: "{{item.classes | join(' ')}}"}
          %a{href: "{{item.link}}"}
            {{item.title}}
      {% endfor %}

-# SCRIPTS
{% block scripts %}
  :javascript
    $(function() {
      $("#hamburger").click(function () {
        $("#mobile-menu").toggleClass("fadeOutUp");
      });
      $(".close-menu").click(function () {
        $("#mobile-menu").toggleClass("fadeOutUp");
      });
    });
{% endblock %}
