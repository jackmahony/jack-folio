{% extends "base.twig" %}

{% block content %}
{% include 'particles/navigation.twig' %}

%section#PortfolioHeader.secondary
  .row.align-center
    .medium-8.columns
      {% if post.portfolio_header %}
        %h1 {{post.portfolio_header}}
      {% endif %}

%section#ProjectThumbnails
  .row.small-up-1.medium-up-2
    {% for project in projects %}
          .column
            %a.project{href: "{{project.link}}"}
              .projectthumbnail
                {% if project.project_image %}
                  %img{src: "{{TimberImage(project.project_image)|resize(280, 233) }}"}
                {% endif %}
                {% if project.project_title %}
                  %h3 {{project.project_title}}
                {% endif %}
                {% if project.company_name %}
                  %p {{project.company_name}}
                {% endif %}
        {% endfor %}

